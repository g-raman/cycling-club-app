<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="3dp">

    <Button
        android:id="@+id/addEventTypeBtn"
        android:layout_width="259dp"
        android:layout_height="58dp"
        android:layout_marginTop="538dp"
        android:backgroundTint="#2196F3"
        android:text="@string/addEventType"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addUserBtn"
        android:layout_width="259dp"
        android:layout_height="58dp"
        android:layout_margin="8sp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="111dp"
        android:backgroundTint="#2196F3"
        android:onClick="tryRegister"
        android:text="@string/stringAdd"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountType" />

    <TextView
        android:id="@+id/textViewUsers"
        android:layout_width="391dp"
        android:layout_height="23dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="4dp"
        android:text="@string/adminUsers"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listUsersView"
        android:layout_width="385dp"
        android:layout_height="118dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAdminHeader"
        android:layout_width="391dp"
        android:layout_height="43dp"
        android:layout_marginEnd="1dp"
        android:text="@string/adminText"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/accountType"
        android:layout_width="391dp"
        android:layout_height="39dp"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="129dp"
            android:layout_height="63dp"
            android:baselineAligned="false"
            android:buttonTint="#2196F3"
            android:checked="true"
            android:text="@string/roleUser" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:buttonTint="#2196F3"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="@string/roleOwner" />
    </RadioGroup>

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="143dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="248dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="246dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:inputType="text"
        android:text="Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEventTypeName"
        android:layout_width="391dp"
        android:layout_height="48dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:inputType="text"
        android:text="Event Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="409dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595">

        <TextView
            android:id="@+id/textViewPace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pace:"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextMinPace"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:text="Min"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="To:" />

        <EditText
            android:id="@+id/editTextPaceMax"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:text="Max"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewMPH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mph" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="391dp"
        android:layout_height="50dp"
        android:layout_marginTop="488dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Age:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="131dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:text="1-100"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewLevel"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Level:"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinnerLevel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <EditText
        android:id="@+id/editTextEventTypeDesc"
        android:layout_width="391dp"
        android:layout_height="48dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:inputType="text"
        android:text="Event Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listEventTypesView"
        android:layout_width="390dp"
        android:layout_height="186dp"
        android:layout_marginTop="596dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>